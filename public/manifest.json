{
  "manifest_version": 3,
  "name": "Từ điển Lạc Việt",
  "description": "Tra từ nhanh chóng với AI. Ưu việt hơn so phương pháp truyền thống như tra từ điển hay Google Translate khi có thể dịch từ, cụm từ hay cả câu với tiên đoán ngữ nghĩa chính xác.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-script.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dictionary-popup.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
